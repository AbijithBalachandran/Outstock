          <body>
          
            <div class="coupon-form">
              <h1>Edit Coupons</h1>
              <form id="couponForm" novalidate>
                <input type="hidden" id="id" name="id" value="<%= coupon.id %>">
                  <div class="form-group">
                      <label for="codeNumber">Code Number</label>
                      <input type="text" class="form-control" id="codeNumber" value="<%= coupon.code %>" placeholder="Enter code number" required>
                      <div class="invalid-feedback">Please enter a code number.</div>
                  </div>
                  <div class="form-group">
                      <label for="couponDiscount">Discount(%)</label>
                      <input type="number" class="form-control" id="couponDiscount" value="<%= coupon.discount %>" placeholder="Enter discount percentage" required>
                      <div class="invalid-feedback">Please enter a discount percentage.</div>
                  </div>
                  <div class="form-group">
                      <label for="purchaseAmount">Min-Purchase Amount</label>
                      <input type="number" class="form-control" id="purchaseAmount" value="<%= coupon.miniParchaseAmt %>" placeholder="Min-Purchase Amount" required>
                      <div class="invalid-feedback">Please enter a minimum purchase amount.</div>
                  </div>
                  <div class="form-group">
                      <label for="redeemableAmount">Max-Redeemable Amount</label>
                      <input type="number" class="form-control" id="redeemableAmount" value="<%= coupon.maxredeemableAmt %>" placeholder="Max-Redeemable Amount" required>
                      <div class="invalid-feedback">Please enter a maximum redeemable amount.</div>
                  </div>
                  <div class="form-group">
                      <label for="expiryDate">Expiry Date</label>
                      <input type="date" class="form-control" id="expiryDate" value="<%= coupon.expDate %>" required>
                      <div class="invalid-feedback">Please enter an expiry date.</div>
                  </div>
                  <button type="submit" class="btn-update">Update</button>
              </form>
          </div>
          
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
            <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
          </body>


