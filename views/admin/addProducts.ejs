                                    <div class="card-body">
                                        <h2 class="card-title text-center mb-4">Add New Products</h2>
                                        <form id="productForm" method="post" action="/admin/addProducts"
                                            enctype="multipart/form-data">
                                            <div class="row">
                                                <div class="col-md-6 mb-3">
                                                    <label for="productName" class="form-label">Product Name</label>
                                                    <input type="text" class="form-control" id="productName" name="name"
                                                        placeholder="Enter product name" required maxlength="50">
                                                    <div class="text-danger" id="errorName"></div>
                                                </div>
                                                <div class="col-md-6 mb-3">
                                                    <label for="productCategory" class="form-label">Category</label>
                                                    <select class="form-control" id="productCategory" name="category" required>
                                                        <option value="" disabled selected>Select a category</option>
                                                        <% for(let i=0;i<category.length;i++){ %>
                                                            <option value="<%=category[i].name%>"><%=category[i].name%></option>></option>
                                                            <%}%>
                                                    </select>
                                                    <div class="text-danger" id="errorCategory"></div>
                                                </div>

                                            </div>

                                            <div class="form-control mb-3 border-0 shadow-none" name="action">
                                                <select class="custom-select" name="action" id="inputGroupSelect02">
                                                    <option selected>Choose....</option>
                                                    <option value="list" name="action">list</option>
                                                    <option value="unlist" name="action">unlist</option>
                                                </select>
                                                <div class="text-danger" id="errorAction"></div>
                                            </div>

                                            <div class="row">
                                                <div class="col-md-4 mb-3">
                                                    <label for="productQuantity" class="form-label">Quantity</label>
                                                    <input type="number" class="form-control input-small"
                                                        id="productQuantity" name="quantity"
                                                        placeholder="Enter quantity" required>
                                                    <div class="text-danger" id="errorQuantity"></div>
                                                </div>
                                                <div class="col-md-4 mb-3">
                                                    <label for="originalPrice" class="form-label">Original Price</label>
                                                    <input type="number" class="form-control input-small"
                                                        id="originalPrice" name="price"
                                                        placeholder="Enter original price" required>
                                                    <div class="text-danger" id="errorPrice"></div>
                                                </div>
                                                <div class="col-md-4 mb-3">
                                                    <label for="discount" class="form-label">Discount (%)</label>
                                                    <input type="number" class="form-control input-small" id="discount"
                                                        name="discount" placeholder="Enter discount percentage"
                                                        onkeyup="calculateDiscountPrice()" required>
                                                    <div class="text-danger" id="errorDiscount"></div>
                                                </div>
                                            </div>

                                            <div class="row">
                                                <div class="col-md-4 mb-3">
                                                    <label for="discountPrice" class="form-label">Discount Price</label>
                                                    <input type="number" class="form-control input-small"
                                                        id="discountPrice" name="disPrice"
                                                        placeholder="Enter discount price" required>
                                                    <div class="text-danger" id="errorDisPrice"></div>
                                                </div>
                                                <div class="col-md-6 mb-3">
                                                    <label for="productCategory" class="form-label">Type</label>
                                                    <input type="text" class="form-control" id="productType" name="type"
                                                        placeholder="Enter Type" required maxlength="50">
                                                    <div class="text-danger" id="errorType"></div>
                                                </div>
                                            </div>

                                            <div class="row">
                                                <div class="col-md-6 mb-3">
                                                    <label for="description" class="form-label">Description</label>
                                                    <textarea class="form-control" id="description" rows="3"
                                                        name="description" placeholder="Enter description" required
                                                        maxlength="200"></textarea>
                                                    <div class="text-danger" id="errorDescription"></div>
                                                </div>
                                            </div>
                                                    <div class="mb-3">
                                                        <label for="productImages" class="form-label">Upload Images</label>
                                                        <div class="row" id="imageUploadCards">
                                                            <div class="col-md-4 mb-3">
                                                                <div class="image-card">
                                                                    <img src="https://via.placeholder.com/150" alt="Placeholder Image" id="imagePreview1">
                                                                    <input type="file" name="images" accept="image/*" required onchange="handleImageUpload(event, 'imagePreview1')">
                                                                </div>
                                                            </div>
                                                            <div class="col-md-4 mb-3">
                                                                <div class="image-card">
                                                                    <img src="https://via.placeholder.com/150" alt="Placeholder Image" id="imagePreview2">
                                                                    <input type="file" name="images" accept="image/*" required onchange="handleImageUpload(event, 'imagePreview2')">
                                                                </div>
                                                            </div>
                                                            <div class="col-md-4 mb-3">
                                                                <div class="image-card">
                                                                    <img src="https://via.placeholder.com/150" alt="Placeholder Image" id="imagePreview3">
                                                                    <input type="file" name="images" accept="image/*" required onchange="handleImageUpload(event, 'imagePreview3')">
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    


                                                </div>
                                                <small class="form-text text-muted">You must upload exactly 3
                                                    images.</small>
                                                <div class="text-danger" id="errorImages"></div>
                                            </div>

                                            <div class="text-center mt-4 mb-3">
                                                <button type="submit" class="btn btn-primary">Add Product</button>
                                            </div>

                                        </form>
                                    </div>
