                                            <h2 class="card-title text-center mb-4">Add New Products</h2>
                                            <form id="productForm" method="post" action="/admin/addProducts" enctype="multipart/form-data">

                                                <div class="row">
                                                    <div class="col-md-6 mb-3">
                                                        <label for="productName" class="form-label">Product Name</label>
                                                        <input type="text" class="form-control" id="productName" name="name" placeholder="Enter product name" required maxlength="50">
                                                    </div>
                                                    <div class="col-md-6 mb-3">
                                                        <label for="productCategory" class="form-label">Category</label>
                                                        <input type="text" class="form-control" id="productCategory" name="category" placeholder="Enter category" required maxlength="50">
                                                    </div>
                                                </div>

                                                <div class="form-control mb-3 border-0 shadow-none"
                                                            name="action">
                                                            <select class="custom-select" name="action"
                                                                id="inputGroupSelect02">
                                                                <option selected>Choose....</option>
                                                                <option value="list" name="action">list</option>
                                                                <option value="unlist" name="action">unlist</option>
                                                            </select>
                                                        </div>
                    
                                                <div class="row">
                                                    <div class="col-md-4 mb-3">
                                                        <label for="productQuantity" class="form-label">Quantity</label>
                                                        <input type="number" class="form-control input-small" id="productQuantity" name="quantity" placeholder="Enter quantity" required>
                                                    </div>
                                                    <div class="col-md-4 mb-3">
                                                        <label for="originalPrice" class="form-label">Original Price</label>
                                                        <input type="number" class="form-control input-small" id="originalPrice" name="price" placeholder="Enter original price" required>
                                                    </div>
                                                    <div class="col-md-4 mb-3">
                                                        <label for="discount" class="form-label">Discount (%)</label>
                                                        <input type="number" class="form-control input-small" id="discount" name="discount" placeholder="Enter discount percentage" required>
                                                    </div>
                                                </div>
                    
                                                <div class="row">
                                                    <div class="col-md-4 mb-3">
                                                        <label for="discountPrice" class="form-label">Discount Price</label>
                                                        <input type="number" class="form-control input-small" id="discountPrice" name="disPrice" placeholder="Enter discount price" required>
                                                    </div>
                                                    <div class="col-md-6 mb-3">
                                                      <label for="productCategory" class="form-label">Type</label>
                                                      <input type="text" class="form-control" id="productCategory" name="type" placeholder="Enter Type" required maxlength="50">
                                                  </div>
                                                </div>

                    
                                                <div class="row">
                                                    <div class="col-md-6 mb-3">
                                                        <label for="description" class="form-label">Description</label>
                                                        <textarea class="form-control" id="description" rows="3" name="description" placeholder="Enter description" required maxlength="50"></textarea>
                                                    </div>
                                                </div>
                    
                                                <div class="mb-3">
                                                    <label for="productImages" class="form-label">Upload Images</label>
                                                    <div class="row" id="imageUploadCards">
                                                        <div class="col-md-4 mb-3">
                                                            <div class="image-card">
                                                                <img src="https://via.placeholder.com/150" alt="Placeholder Image" id="imagePreview1">
                                                                <input type="file" name="images" accept="image/*" required onchange="previewImage(event, 'imagePreview1')">
                                                            </div>
                                                        </div>
                                                        <div class="col-md-4 mb-3">
                                                            <div class="image-card">
                                                                <img src="https://via.placeholder.com/150" alt="Placeholder Image" id="imagePreview2">
                                                                <input type="file" name="images" accept="image/*" required onchange="previewImage(event, 'imagePreview2')">
                                                            </div>
                                                        </div>
                                                        <div class="col-md-4 mb-3">
                                                            <div class="image-card">
                                                                <img src="https://via.placeholder.com/150" alt="Placeholder Image" id="imagePreview3">
                                                                <input type="file" name="images" accept="image/*" required onchange="previewImage(event, 'imagePreview3')">
