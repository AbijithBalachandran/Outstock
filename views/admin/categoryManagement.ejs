                        <% if(categories.length> 0){ %> 
                                <% for(let i=0;i<categories.length;i++){ %> 
                                    <tbody>
                                        <tr>
                                            <td>
                                                 <%= categories[i].name %> 
                                            </td>
                                            <td>
                                                 <%= categories[i].description %> 
                                            </td>

                                            <td>

                                                <% if (categoryDiscounts.has(categories[i]._id.toString())) { %>
