                                                <% } else { %>
                                                    No offer
                                                <% } %>

                                            </td>

                                            <td>
                                                 <%= new Date(categories[i].createdAt).toLocaleDateString('en-US', {
                                                    weekday: 'short' , month: 'short' , day: 'numeric' , year:'numeric'})%> 
                                            </td>
                                            <td>
                                                 <% if(categories[i].is_Delete===false){ %> 
                                                    <button class="btn btn-outline-danger"
                                                        onclick="updateCategoyStatus('<%= categories[i]._id %>', false)">List</button>
                                                     <% }else{ %> 
                                                        <button class="btn btn-outline-success"
                                                            onclick="updateCategoyStatus('<%= categories[i]._id %>', true)">UnList</button>
                                                         <% } %>  
                                            </td>
                                            <td>
                                                <a href="/admin/editCategory?categoryId=<%= categories[i]._id %>"><button type="button" class="btn btn-info">EDIT</button></a>
                                            </td>
                                        </tr>
                                    </tbody>
                                     <%} }else{ %> 
                                        <h6>Category Not Found</h6>
                                         <% } %> 
