<%- include('../layout/adminHeader') %>


    <style>
        .order-summary {
            border: 1px solid #ddd;
            border-radius: 8px;
            padding: 20px;
            margin-bottom: 20px;
        }

        .order-summary .order-header {
            display: flex;
            justify-content: space-between;
            margin-bottom: 20px;
        }

        .order-summary .order-header h5 {
            margin-bottom: 0;
        }

        .order-summary .order-body {
            margin-bottom: 20px;
        }

        .order-summary .order-footer {
            display: flex;
            justify-content: space-between;
        }

        .order-summary .product-list img {
            width: 50px;
            height: 50px;
            object-fit: cover;
        }
    </style>
    </head>

    <body>

        <div class="container mt-5">
            <div class="order-summary">
                <div class="order-header">
                    <div>
                        <p>Order Date: <strong>
                                <%= new Date(order.orderDate).toLocaleDateString('en-US', { weekday: 'short' ,
                                    month: 'short' , day: 'numeric' , year: 'numeric' }) %>
                            </strong></p>
                        <p>Order ID: <strong>
                                <%= order._id %>
                            </strong></p>
                    </div>
                    <div>
                        <select id="orderStatusSelect" class="form-select" aria-label="Order Status">
                            <% orderStatusEnum.forEach(status=> { %>
                                <option value="<%= status %>" <%=order.orderStatus===status ? 'selected' : '' %>><%=
                                        status %>
                                </option>
                                <% }); %>
                        </select>
                        <button class="btn btn-success mt-2" onclick="changeStatus('<%= order._id %>')">Save</button>
                    </div>
                </div>
                <div class="row order-body">
                    <div class="col-md-4">
                        <h6>Customer</h6>
                        <% if (order.address && order.address[0]) { %>
                            <p><strong>
                                    <%= order.address[0].userName %>
                                </strong></p>
                            <p>
                                <%= order.user.email %>
                            </p>
                            <p>
                                <%= order.address[0].phone %>
                            </p>
                            <% } else { %>
                                <p><strong>Customer information is not available</strong></p>
                                <% } %>
                    </div>
                    <div class="col-md-4">
                        <h6>Order Info</h6>
                        <p>Pay method: <%= order.paymentMethod %>
                        </p>
                        <p>Status: <%= order.orderStatus %>
                        </p>
                        <a href="#">Download info</a>
                    </div>
                    <div class="col-md-4">
                        <h6>Deliver to</h6>
                        <% if (order.address && order.address[0]) { %>
                            <p>City: <%= order.address[0].city %>, <%= order.address[0].location %>
                            </p>
                            <p>
                                <%= order.address[0].address %>
                            </p>
                            <p>PIN: <%= order.address[0].pincode %>
                            </p>
                            <% } else { %>
                                <p>Delivery address is not available</p>
                                <% } %>
                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Unit Price</th>
                                <th>Quantity</th>
                                <th>Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (order.orderItem && order.orderItem.length> 0) {%>
                                <% order.orderItem.forEach(item=>{ %>
                                    <tr>
                                        <td>
                                            <img src="/upload/product/<%= item.images[0] %>" alt="Product Image"
                                                style="width: 50px;">
                                            <%= item.productName %>
                                        </td>
                                        <td>
                                            <%= item.price %>
                                        </td>
                                        <td>
                                            <%= item.quantity %>
                                        </td>
                                        <td>
                                            <%= item.price * item.quantity %>
                                        </td>
                                    </tr>
                                    <%})%>
                                        <% } %>

                        </tbody>
                        <tfoot>
                            <tr>
                                <th colspan="3" class="text-end">Subtotal:</th>
                                <th>$333.00</th>
                            </tr>
                            <tr>
                                <th colspan="3" class="text-end">Shipping cost:</th>
                                <th>$15.00</th>
                            </tr>
                            <tr>
                                <th colspan="3" class="text-end">Grand total:</th>
                                <th>$348.00</th>
                            </tr>
                            <tr>
                                <th colspan="3" class="text-end">Status:</th>
                                <th><span class="badge bg-success">Payment done</span></th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>


        <script>
            async function changeStatus(orderId) {
                const selectElement = document.getElementById('orderStatusSelect');
                const newStatus = selectElement.value;

                try {
                    const response = await fetch(`/admin/update-status/${orderId}/${newStatus}`, {
                        method: 'PUT',
                        headers: {
                            'Content-Type': 'application/json'
                        }
                    });

                    const result = await response.json();
                    if (result.success) {
                        Swal.fire({
                            position: "center",
                            icon: "success",
                            title: "Your work has been saved",
                            showConfirmButton: false,
                            timer: 1500
                        });
                    } else {
                        alert(`Error: ${result.message}`);
                    }
                } catch (error) {
                    console.error('Error updating order status:', error);
                    alert('An error occurred while updating the order status.' + error);
                }
            }
        </script>

        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/js/bootstrap.min.js"></script>
    </body>


    <%- include('../layout/adminFooter') %>