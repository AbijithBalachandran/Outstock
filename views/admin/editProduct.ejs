                                    <div class="card-body">
                                        <h2 class="card-title text-center mb-4">Edit Products</h2>

                                        <form id="productForm" method="post" action="/admin/editProduct"
                                            enctype="multipart/form-data">
                                            <div class="row">
                                                <input type="hidden" name="id" value="<%=product.id%>">

                                                <div class="col-md-6 mb-3">
                                                    <label for="productName" class="form-label">Product Name</label>
                                                    <input type="text" class="form-control" id="productName" name="name"
                                                        value="<%=product.name%>" placeholder="Enter product name"
                                                        required maxlength="50">
                                                    <div class="text-danger" id="errorName"></div>
                                                </div>

                                                <div class="col-md-6 mb-3">
                                                    <label for="productCategory" class="form-label">Category</label>
                                                    <select class="form-control" id="productCategory" name="category"
                                                        required>
                                                        <% for(let i=0;i<category.length;i++){ %>
                                                            <option value="<%=category[i].name%>">
                                                                <%=category[i].name%>
                                                            </option>></option>
                                                            <%}%>
                                                    </select>
                                                    <div class="text-danger" id="errorCategory"></div>
                                                </div>

                                            </div>

                                            <div class="form-control mb-3 border-0 shadow-none">
                                                <select class="custom-select" name="action" id="inputGroupSelect02">
                                                    <option selected value="<%=product.action==false?'unlist':'list'%>"><%=product.action==false?'unlist':'list'%></option>
                                                    <option value="<%=product.action%>">list</option>
                                                    <option value="<%=product.action%>">unlist</option>
                                                </select>
                                                <div class="text-danger" id="errorAction"></div>
                                            </div>

                                            <div class="row">
                                                <div class="col-md-4 mb-3">
                                                    <label for="productQuantity" class="form-label">Quantity</label>
                                                    <input type="number" class="form-control input-small"
                                                        id="productQuantity" name="quantity"
                                                        value="<%=product.quantity%>" placeholder="Enter quantity"
                                                        required>
                                                    <div class="text-danger" id="errorQuantity"></div>
                                                </div>
                                                <div class="col-md-4 mb-3">
                                                    <label for="originalPrice" class="form-label">Original Price</label>
                                                    <input type="number" class="form-control input-small"
                                                        id="originalPrice" name="price" value="<%=product.price%>"
                                                        placeholder="Enter original price" required>
                                                    <div class="text-danger" id="errorPrice"></div>
                                                </div>
                                                <div class="col-md-4 mb-3">
                                                    <label for="discount" class="form-label">Discount (%)</label>
                                                    <input type="number" class="form-control input-small" id="discount"
                                                        name="discount" placeholder="Enter discount percentage"
                                                        onkeyup="calculateDiscountPrice()" value="<%=product.discount%>"
                                                        required>
                                                    <div class="text-danger" id="errorDiscount"></div>
                                                </div>
                                            </div>

                                            <div class="row">
                                                <div class="col-md-4 mb-3">
                                                    <label for="discountPrice" class="form-label">Discount Price</label>
                                                    <input type="number" class="form-control input-small"
                                                        id="discountPrice" name="disPrice"
                                                        placeholder="Enter discount price" value="<%=product.disPrice%>"
                                                        required>
                                                    <div class="text-danger" id="errorDisPrice"></div>
                                                </div>
                                                <div class="col-md-6 mb-3">
                                                    <label for="productType" class="form-label">Type</label>
                                                    <input type="text" class="form-control" id="productType" name="type"
                                                        value="<%=product.type%>" placeholder="Enter Type" required
                                                        maxlength="50">
                                                    <div class="text-danger" id="errorType"></div>
                                                </div>
                                            </div>

                                            <div class="row">
                                                <div class="col-md-6 mb-3">
                                                    <label for="description" class="form-label">Description</label>
                                                    <textarea class="form-control" id="description" rows="3"
                                                        name="description" placeholder="Enter description" required
                                                        maxlength="1000"><%=product.description%></textarea>
                                                    <div class="text-danger" id="errorDescription"></div>
                                                </div>
                                            </div>

                                            <!-- upload Images  -->
                                            <!-- upload Images  -->
                                            <div class="mb-3">
                                                <label for="productImages" class="form-label">Upload Images</label>
                                                <div class="row" id="imageUploadCards">
                                                    <% if(product.images[0]) { %>
                                                        <div class="col-md-4 mb-3">
                                                            <div class="image-card">
                                                                <img src="/upload/product/<%=product.images[0]%>"
                                                                    alt="Placeholder Image" id="imagePreview1"
                                                                    class="w-50">
                                                                <input type="file" name="images" accept="image/*"
                                                                    onchange="previewImage(event, 'imagePreview1')">
                                                            </div>
                                                        </div>
                                                        <% } %>
                                                            <% if(product.images[1]) { %>
                                                                <div class="col-md-4 mb-3">
                                                                    <div class="image-card">
                                                                        <img src="/upload/product/<%=product.images[1]%>"
                                                                            alt="Placeholder Image" id="imagePreview2"
                                                                            class="w-50">
                                                                        <input type="file" name="images"
                                                                            accept="image/*"
                                                                            onchange="previewImage(event, 'imagePreview2')">
                                                                    </div>
                                                                </div>
                                                                <% } %>
                                                                    <% if(product.images[2]) { %>
                                                                        <div class="col-md-4 mb-3">
                                                                            <div class="image-card">
                                                                                <img src="/upload/product/<%=product.images[2]%>"
                                                                                    alt="Placeholder Image"
                                                                                    id="imagePreview3" class="w-50">
                                                                                <input type="file" name="images"
                                                                                    accept="image/*"
                                                                                    onchange="previewImage(event, 'imagePreview3')">
                                                                            </div>
                                                                        </div>
                                                                        <% } %>
                                                </div>
                                            </div>

                                            <!-- Upload Images End -->
                                            <div class="text-center">
                                                <button type="submit" class="btn btn-primary">SAVE</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
