<script>

    
 let myChart;
 let lineChart;

function renderBarChart(data) {

  data = data.filter(item => item.category);

  const xValues = data.map(item => item.category);
  const yValues = data.map(item => item.totalSales);


  const barColors = ["red", "green", "blue", "orange", "brown"];

  
  if (myChart) {
    myChart.destroy();
  }

  const ctx = document.getElementById('myChart').getContext('2d');

 
  myChart = new Chart(ctx, {
    type: 'bar',
    data: {
      labels: xValues,
      datasets: [{
        backgroundColor: barColors,
        data: yValues
      }]
    },
    options: {
      responsive: true,
      plugins: {
        title: {
          display: true,
          text: 'Best Selling Categories', 
          font: {
            size: 18, 
            family: 'Arial', 
            weight: 'bold' 
          },
          color: '#333' 
        },
        legend: {
          display: false
        }
      },
      scales: {
        x: {
          beginAtZero: true
        },
        y: {
          beginAtZero: true
        }
      }
    }
  });
}



function renderLineChart(data) {

  data = data.filter(item => item.productName);

  const xValues = data.map(item => item.productName);
  const yValues = data.map(item => item.totalSold);

  if (lineChart) {
    lineChart.destroy();
  }

  const ctx = document.getElementById('lineChart').getContext('2d');

  lineChart = new Chart(ctx, {
    type: 'line',
    data: {
      labels: xValues,
      datasets: [{
        label: 'Best Selling Products',
        borderColor: 'blue',
        backgroundColor: 'rgba(0, 0, 255, 0.2)',
        data: yValues,
        fill: true
      }]
    },
    options: {
      responsive: true,
      plugins: {
        title: {
          display: true,
          text: 'Best Selling Products',
          font: {
            size: 18,
            family: 'Arial',
            weight: 'bold'
          },
          color: '#333'
        },
        legend: {
          display: false
        }
      },
      scales: {
        x: {
          beginAtZero: true
        },
        y: {
          beginAtZero: true
        }
      }
    }
  });
}

async function fetchSalesData(range) {
  try {
    const response = await fetch('/admin/filter-sales-data', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json'
      },
      body: JSON.stringify({ range })
    });
    const data = await response.json();
    
    // Assuming 'categories' is for the bar chart and 'products' is for the line chart
    renderBarChart(data?.salesData?.categories); // Pass the categories data to the bar chart
    renderLineChart(data?.salesData?.products.bestSellingProducts); // Pass the bestSellingProducts array to the line chart

  } catch (error) {
    console.error('Error fetching sales data:', error);
  }
}

// Event listener for time range selection
document.getElementById('timeRange').addEventListener('change', function() {
  fetchSalesData(this.value);
});

// Initial data rendering when the page loads
